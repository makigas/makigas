<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :root %></li>
    <li><%= link_to t('.users'), :users %></li>
    <li><%= link_to @user, @user %></li>
    <li class="current"><%= t('.edit') %></li>
  </ol>
  <h1><%= @user %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), @user, class: 'btn btn-default' %>
<% end %>

<%= render 'form' %>