<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :dashboard %></li>
    <li><%= link_to t('.videos'), [:dashboard, :videos] %></li>
    <li><%= link_to @video, [:dashboard, @video] %></li>
    <li class="current"><%= t('.edit') %></li>
  </ol>
  <h1><%= t('.edit') %></h1>
<% end %>

<div class="dashboard-toolbar">
  <%= link_to t('.cancel'), [:dashboard, @video], class: 'btn btn-default' %>
</div>

<%= render 'form' %>