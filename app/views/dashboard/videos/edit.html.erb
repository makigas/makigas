<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :root %></li>
    <li><%= link_to t('.videos'), :videos %></li>
    <li><%= link_to @video, @video %></li>
    <li class="current"><%= t('.edit') %></li>
  </ol>
  <h1><%= @video %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), @video, class: 'btn btn-default' %>
<% end %>

<%= render 'form' %>