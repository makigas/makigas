<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :dashboard %></li>
    <li><%= link_to t('.topics'), [:dashboard, :topics] %></li>
    <li class="current"><%= @topic %></li>
  </ol>
  <h1><%= @topic %></h1>
<% end %>

<div class="dashboard-toolbar">
  <%= link_to t('.public'), @topic, class: 'btn btn-default' %>
  <%= link_to t('.edit'), [:edit, :dashboard, @topic], class: 'btn btn-default' %>
  <%= button_to t('.destroy'), [:dashboard, @topic], method: :delete, class: 'btn btn-danger', data: { confirm: t('.really_destroy') } %>
</div>

<table class="table table-default">
  <tr>
    <td><%= t('.title') %></td>
    <td><%= @topic.title %></td>
  </tr>
  <tr>
    <td><%= t('.description') %></td>
    <td><%= @topic.description %></td>
  </tr>
  <tr>
    <td><%= t('.playlists') %></td>
    <td>
      <ul>
      <% @topic.playlists.each do |playlist| %>
        <li><%= link_to playlist.title, [:dashboard, playlist] %></li>
      <% end %>
      </ul>
    </td>
  </tr>
</table>