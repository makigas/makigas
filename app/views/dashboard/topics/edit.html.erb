<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :root %></li>
    <li><%= link_to t('.topics'), :topics %></li>
    <li><%= link_to @topic, @topic %></li>
    <li class="current"><%= t('.edit') %></li>
  </ol>
  <h1><%= @topic %></h1>
<% end %>

<% content_for :toolbar do %>
  <%= link_to t('.cancel'), @topic, class: 'btn btn-default' %>
<% end %>

<%= render 'form' %>