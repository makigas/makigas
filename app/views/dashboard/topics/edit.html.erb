<% content_for :header do %>
  <ol class="breadcrumb">
    <li><%= link_to t('.dashboard'), :dashboard %></li>
    <li><%= link_to t('.topics'), [:dashboard, :topics] %></li>
    <li><%= link_to @topic, [:dashboard, @topic] %></li>
    <li class="current"><%= t('.edit') %></li>
  </ol>
  <h1><%= t('.edit') %></h1>
<% end %>

<div class="dashboard-toolbar">
  <%= link_to t('.cancel'), [:new, :dashboard, @topic], class: 'btn btn-default' %>
</div>

<%= render 'form' %>