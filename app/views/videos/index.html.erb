<% content_for :hero do %>
  <h1><%= t('.title') %></h1>
<% end %>

<div class="row grid-table">
  <% @videos.each do |video| %>
    <div class="col-xs-6 col-sm-4 col-lg-3">
      <%= link_to video do %>
        <div class="video panel panel-default">
          <span class="badge"><%= running_time(video.duration) %></span>
          <%= image_tag video.thumbnail.url(:md), srcset: "#{video.thumbnail.url(:hd)} 2x" %>
          <div class="panel-heading">
            <h3 class="panel-title"><%= video.title %></h3>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>